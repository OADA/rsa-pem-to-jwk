{
  "name": "rsa-pem-to-jwk",
  "version": "1.1.3",
  "description": "Converts PEM encoded RSA public and private keys to the JWK (JSON Web Key) format.",
  "main": "dist/index.js",
  "module": "dist/rsa-pem-to-jwk.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test",
    "test:watch": "dts test --watch",
    "test:coverage": "dts test --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/rsa-pem-to-jwk.cjs.production.min.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/rsa-pem-to-jwk.esm.js",
      "limit": "2 KB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/rsa-pem-to-jwk.git"
  },
  "keywords": [
    "RSA",
    "PEM",
    "public",
    "private",
    "jwk",
    "jwks"
  ],
  "author": "Andrew Balmos <andrew@balmos.org> (https://github.com/abalmos)",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/OADA/rsa-pem-to-jwk/issues"
  },
  "homepage": "https://github.com/OADA/rsa-pem-to-jwk",
  "dependencies": {
    "@rexxars/rsa-unpack": "^1.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.15.3",
    "coveralls": "^3.1.1",
    "dts-cli": "^2.0.3",
    "husky": "^8.0.3",
    "size-limit": "^8.2.4",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  }
}
